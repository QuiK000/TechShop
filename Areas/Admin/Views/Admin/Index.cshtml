@model WebApplication2.Areas.Admin.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Панель управління";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Статистичні картки -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Товарів</p>
                    <h3 class="text-primary">@Model.TotalProducts</h3>
                </div>
                <i class="fas fa-box fa-3x text-primary opacity-25"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Замовлень</p>
                    <h3 class="text-success">@Model.TotalOrders</h3>
                    @if (Model.NewOrders > 0)
                    {
                        <small class="text-danger">+@Model.NewOrders нових</small>
                    }
                </div>
                <i class="fas fa-shopping-cart fa-3x text-success opacity-25"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Користувачів</p>
                    <h3 class="text-info">@Model.TotalUsers</h3>
                </div>
                <i class="fas fa-users fa-3x text-info opacity-25"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Виручка</p>
                    <h3 class="text-warning">@Model.TotalRevenue.ToString("N0") ₴</h3>
                </div>
                <i class="fas fa-dollar-sign fa-3x text-warning opacity-25"></i>
            </div>
        </div>
    </div>
</div>

@if (Model.LowStockProducts > 0)
{
    <div class="alert alert-warning mb-4">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Увага!</strong> @Model.LowStockProducts товарів з низьким залишком на складі.
        <a href="/Admin/Admin/Products" class="alert-link">Переглянути</a>
    </div>
}

<div class="row">
    <!-- Останні замовлення -->
    <div class="col-lg-8 mb-4">
        <div class="table-card">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5><i class="fas fa-list"></i> Останні замовлення</h5>
                <a href="/Admin/Admin/Orders" class="btn btn-sm btn-primary">Всі замовлення</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Клієнт</th>
                            <th>Сума</th>
                            <th>Статус</th>
                            <th>Дата</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><strong>@order.OrderNumber</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.TotalAmount.ToString("N0") ₴</td>
                                <td>
                                    <span class="badge badge-@order.Status.ToString().ToLower()">
                                        @order.Status
                                    </span>
                                </td>
                                <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <a href="/Admin/Admin/OrderDetails/@order.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Топ товари -->
    <div class="col-lg-4 mb-4">
        <div class="table-card">
            <h5 class="mb-3"><i class="fas fa-star"></i> Топ товари</h5>
            <div class="list-group list-group-flush">
                @foreach (var product in Model.TopProducts)
                {
                    <div class="list-group-item px-0">
                        <div class="d-flex justify-content-between">
                            <div>
                                <strong>@product.ProductName</strong>
                                <br>
                                <small class="text-muted">Продано: @product.TotalSold шт.</small>
                            </div>
                            <span class="text-success fw-bold">@product.Revenue.ToString("N0") ₴</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="table-card mt-3">
            <h5 class="mb-3"><i class="fas fa-user-plus"></i> Нові користувачі</h5>
            <div class="list-group list-group-flush">
                @foreach (var user in Model.RecentUsers)
                {
                    <div class="list-group-item px-0">
                        <strong>@user.FirstName @user.LastName</strong>
                        <br>
                        <small class="text-muted">@user.CreatedAt.ToString("dd.MM.yyyy")</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Швидкі дії -->
<div class="row">
    <div class="col-md-3 mb-3">
        <a href="/Admin/Admin/CreateProduct" class="btn btn-primary w-100 p-3">
            <i class="fas fa-plus-circle fa-2x d-block mb-2"></i>
            Додати товар
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Admin/Admin/Orders?status=0" class="btn btn-success w-100 p-3">
            <i class="fas fa-bell fa-2x d-block mb-2"></i>
            Нові замовлення
            @if (Model.NewOrders > 0)
            {
                <span class="badge bg-danger ms-2">@Model.NewOrders</span>
            }
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Admin/Admin/Products" class="btn btn-warning w-100 p-3">
            <i class="fas fa-exclamation-triangle fa-2x d-block mb-2"></i>
            Низький залишок
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a href="/Admin/Admin/Analytics" class="btn btn-info w-100 p-3">
            <i class="fas fa-chart-line fa-2x d-block mb-2"></i>
            Аналітика
        </a>
    </div>
</div>