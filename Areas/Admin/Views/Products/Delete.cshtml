@model WebApplication2.Models.Product
@{
    ViewData["Title"] = "Видалення товару";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Підтвердження видалення</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Увага!</strong> Ви дійсно хочете видалити цей товар? Ця дія незворотна!
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <img src="@(Model.ImageUrl ?? "/images/no-image.jpg")" 
                                 alt="@Model.Name" 
                                 class="img-fluid rounded">
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Категорія:</dt>
                                <dd class="col-sm-8">@Model.Category.Name</dd>

                                <dt class="col-sm-4">Бренд:</dt>
                                <dd class="col-sm-8">@Model.Brand</dd>

                                <dt class="col-sm-4">Ціна:</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("N0") грн</dd>

                                <dt class="col-sm-4">На складі:</dt>
                                <dd class="col-sm-8">@Model.StockQuantity шт.</dd>

                                <dt class="col-sm-4">Відгуків:</dt>
                                <dd class="col-sm-8">@Model.ReviewCount</dd>

                                <dt class="col-sm-4">Створено:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.ReviewCount > 0)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            У цього товару є @Model.ReviewCount відгук(ів). Вони також будуть видалені.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Скасувати
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Так, видалити товар
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>