@model IEnumerable<WebApplication2.Models.Product>
@{
    ViewData["Title"] = "Управління товарами";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-boxes"></i> Управління товарами</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Додати товар
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Зображення</th>
                            <th>Назва</th>
                            <th>Категорія</th>
                            <th>Бренд</th>
                            <th>Ціна</th>
                            <th>На складі</th>
                            <th>Рейтинг</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@(product.ImageUrl ?? "/images/no-image.jpg")" 
                                         alt="@product.Name" 
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                </td>
                                <td><strong>@product.Name</strong></td>
                                <td>@product.Category.Name</td>
                                <td>@product.Brand</td>
                                <td>@product.Price.ToString("N0") грн</td>
                                <td>
                                    @if (product.StockQuantity > 10)
                                    {
                                        <span class="badge bg-success">@product.StockQuantity шт.</span>
                                    }
                                    else if (product.StockQuantity > 0)
                                    {
                                        <span class="badge bg-warning">@product.StockQuantity шт.</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Немає</span>
                                    }
                                </td>
                                <td>
                                    @for (int i = 0; i < (int)product.AverageRating; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    <small>(@product.ReviewCount)</small>
                                </td>
                                <td>
                                    @if (product.IsAvailable)
                                    {
                                        <span class="badge bg-success">Активний</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Неактивний</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@product.Id" 
                                           class="btn btn-sm btn-outline-info" title="Деталі">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@product.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Редагувати">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Видалити">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>