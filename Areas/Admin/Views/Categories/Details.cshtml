@model WebApplication2.Models.Category
@{
    ViewData["Title"] = "Деталі категорії";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-folder-open"></i> Деталі категорії</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Редагувати
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-folder fa-5x text-primary mb-3"></i>
                    <h3>@Model.Name</h3>
                    @if (Model.ParentCategory != null)
                    {
                        <p class="text-muted">Підкатегорія: @Model.ParentCategory.Name</p>
                    }
                    else
                    {
                        <p class="text-muted">Основна категорія</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Статистика</h5>
                    <p><strong>Товарів:</strong> @Model.Products.Count</p>
                    <p><strong>Підкатегорій:</strong> @Model.SubCategories.Count</p>
                    <p><strong>Створено:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Інформація</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>ID:</strong></div>
                        <div class="col-md-9">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Назва:</strong></div>
                        <div class="col-md-9">@Model.Name</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Опис:</strong></div>
                        <div class="col-md-9">@(Model.Description ?? "Не вказано")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-3"><strong>Батьківська:</strong></div>
                        <div class="col-md-9">
                            @if (Model.ParentCategory != null)
                            {
                                <a asp-action="Details" asp-route-id="@Model.ParentCategory.Id">
                                    @Model.ParentCategory.Name
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Немає</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.SubCategories.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0">Підкатегорії (@Model.SubCategories.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var subcat in Model.SubCategories)
                            {
                                <a asp-action="Details" asp-route-id="@subcat.Id" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-folder text-warning"></i>
                                            <strong>@subcat.Name</strong>
                                            @if (!string.IsNullOrEmpty(subcat.Description))
                                            {
                                                <br><small class="text-muted">@subcat.Description</small>
                                            }
                                        </div>
                                        <span class="badge bg-info">@subcat.Products.Count товарів</span>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (Model.Products.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Товари (@Model.Products.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Назва</th>
                                        <th>Бренд</th>
                                        <th>Ціна</th>
                                        <th>Залишок</th>
                                        <th>Дії</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products.Take(10))
                                    {
                                        <tr>
                                            <td>@product.Name</td>
                                            <td>@product.Brand</td>
                                            <td>@product.Price.ToString("N0") грн</td>
                                            <td>@product.StockQuantity шт.</td>
                                            <td>
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Products.Count > 10)
                        {
                            <div class="text-center">
                                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    Показати всі товари (@Model.Products.Count)
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    У цій категорії поки немає товарів
                </div>
            }
        </div>
    </div>
</div>