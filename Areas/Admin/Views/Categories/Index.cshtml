@model IEnumerable<WebApplication2.Models.Category>
@{
    ViewData["Title"] = "Управління категоріями";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-folder-open"></i> Управління категоріями</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Додати категорію
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Назва</th>
                            <th>Опис</th>
                            <th>Батьківська категорія</th>
                            <th>Товарів</th>
                            <th>Підкатегорій</th>
                            <th>Дата створення</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td><strong>@category.Name</strong></td>
                                <td>@(category.Description ?? "-")</td>
                                <td>
                                    @if (category.ParentCategory != null)
                                    {
                                        <span class="badge bg-secondary">@category.ParentCategory.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Основна</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@category.Products.Count</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@category.SubCategories.Count</span>
                                </td>
                                <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@category.Id" 
                                           class="btn btn-sm btn-outline-info" title="Деталі">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@category.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Редагувати">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" 
                                           class="btn btn-sm btn-outline-danger" title="Видалити">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-folder fa-3x text-primary mb-3"></i>
                    <h5>Всього категорій</h5>
                    <h2 class="text-primary">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-3x text-success mb-3"></i>
                    <h5>Всього товарів</h5>
                    <h2 class="text-success">@Model.Sum(c => c.Products.Count)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-sitemap fa-3x text-warning mb-3"></i>
                    <h5>Підкатегорій</h5>
                    <h2 class="text-warning">@Model.Count(c => c.ParentCategoryId != null)</h2>
                </div>
            </div>
        </div>
    </div>
</div>