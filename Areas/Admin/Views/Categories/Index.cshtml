@model List<WebApplication2.Models.Category>
@{
    ViewData["Title"] = "Категорії";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>Категорії</h1>
            <p class="text-muted">Управління категоріями товарів</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Додати категорію
        </a>
    </div>
</div>

<div class="table-card">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Назва</th>
                    <th>Опис</th>
                    <th>Батьківська категорія</th>
                    <th>Товарів</th>
                    <th>Дата створення</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>
                            <strong>@category.Name</strong>
                            @if (category.SubCategories.Any())
                            {
                                <span class="badge bg-info ms-2">
                                    @category.SubCategories.Count підкатегорій
                                </span>
                            }
                        </td>
                        <td>@category.Description</td>
                        <td>
                            @if (category.ParentCategory != null)
                            {
                                <span class="badge bg-secondary">@category.ParentCategory.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>
                            @if (category.Products.Any())
                            {
                                <span class="badge bg-success">@category.Products.Count</span>
                            }
                            else
                            {
                                <span class="text-muted">0</span>
                            }
                        </td>
                        <td>@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@category.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button onclick="deleteCategory(@category.Id)" 
                                        class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deleteCategory(id) {
            if (!confirm('Видалити категорію?')) return;

            $.ajax({
                url: '/Admin/Categories/Delete',
                method: 'POST',
                data: { id: id },
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast(response.message, 'danger');
                    }
                },
                error: function() {
                    showToast('Помилка з\'єднання', 'danger');
                }
            });
        }
    </script>
}