@using WebApplication2.Models
@model WebApplication2.Models.Order
@{
    ViewData["Title"] = $"Деталі замовлення {Model.OrderNumber}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-file-invoice"></i> Деталі замовлення @Model.OrderNumber</h1>
        <div>
            <a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-download"></i> Завантажити чек
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Order Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Інформація про замовлення</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Номер замовлення:</strong><br>
                            <span class="badge bg-primary fs-6">@Model.OrderNumber</span>
                        </div>
                        <div class="col-md-6">
                            <strong>Дата створення:</strong><br>
                            @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Статус:</strong><br>
                            <select class="form-select mt-2" id="orderStatus">
                                <option value="0" selected="@(Model.Status == OrderStatus.New)">Нове</option>
                                <option value="1" selected="@(Model.Status == OrderStatus.Processing)">В обробці</option>
                                <option value="2" selected="@(Model.Status == OrderStatus.Shipped)">Відправлено</option>
                                <option value="3" selected="@(Model.Status == OrderStatus.Delivered)">Доставлено</option>
                                <option value="4" selected="@(Model.Status == OrderStatus.Cancelled)">Скасовано</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <strong>Загальна сума:</strong><br>
                            <h3 class="text-primary mb-0">@Model.TotalAmount.ToString("N0") грн</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Контактна інформація</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>ПІБ:</strong><br>
                            @Model.CustomerName
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong><br>
                            <a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Телефон:</strong><br>
                            <a href="tel:@Model.CustomerPhone">@Model.CustomerPhone</a>
                        </div>
                        <div class="col-md-12">
                            <strong>Адреса доставки:</strong><br>
                            @Model.DeliveryAddress
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery & Payment -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-truck"></i> Доставка та оплата</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Спосіб доставки:</strong><br>
                            @Model.DeliveryMethod
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Вартість доставки:</strong><br>
                            @Model.DeliveryPrice.ToString("N0") грн
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Спосіб оплати:</strong><br>
                            @Model.PaymentMethod
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="alert alert-info mt-3">
                            <strong><i class="fas fa-comment"></i> Коментар клієнта:</strong><br>
                            @Model.Notes
                        </div>
                    }
                </div>
            </div>

            <!-- Order Items -->
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Склад замовлення</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Товар</th>
                                    <th class="text-center">Кількість</th>
                                    <th class="text-end">Ціна</th>
                                    <th class="text-end">Сума</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.Price.ToString("N0") грн</td>
                                        <td class="text-end">@item.TotalPrice.ToString("N0") грн</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                @{
                                    var subtotal = Model.TotalAmount - Model.DeliveryPrice;
                                }
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Вартість товарів:</strong></td>
                                    <td class="text-end">@subtotal.ToString("N0") грн</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Доставка:</strong></td>
                                    <td class="text-end">@Model.DeliveryPrice.ToString("N0") грн</td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="3" class="text-end"><strong>ВСЬОГО:</strong></td>
                                    <td class="text-end"><strong>@Model.TotalAmount.ToString("N0") грн</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Timeline -->
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="fas fa-history"></i> Історія змін</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-date">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                            <div class="timeline-content">
                                <i class="fas fa-plus-circle text-success"></i>
                                Замовлення створено
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-date">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                            <div class="timeline-content">
                                <i class="fas fa-edit text-info"></i>
                                Останнє оновлення
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.User != null)
            {
                <!-- Customer Card -->
                <div class="card shadow-sm mt-3">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-user-circle"></i> Клієнт</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="user-avatar mb-2" style="width: 80px; height: 80px; margin: 0 auto;">
                                <span>@Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)</span>
                            </div>
                            <h5>@Model.User.FirstName @Model.User.LastName</h5>
                            <p class="text-muted">@Model.User.Email</p>
                        </div>
                        <hr>
                        <div>
                            <strong>Дата реєстрації:</strong><br>
                            @Model.User.CreatedAt.ToString("dd.MM.yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#orderStatus').on('change', function() {
                const status = $(this).val();
                
                if (confirm('Змінити статус замовлення?')) {
                    $.post('/Admin/Orders/UpdateStatus', { 
                        orderId: @Model.Id, 
                        status: status 
                    })
                    .done(function(response) {
                        if (response.success) {
                            showToast('Статус оновлено!', 'success');
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            showToast(response.message, 'danger');
                        }
                    })
                    .fail(function() {
                        showToast('Помилка з\'єднання', 'danger');
                    });
                }
            });
        });
    </script>
    
    <style>
        .timeline-item {
            padding: 15px;
            border-left: 2px solid #dee2e6;
            margin-left: 10px;
            position: relative;
        }
        
        .timeline-item::before {
            content: '';
            width: 12px;
            height: 12px;
            background: #fff;
            border: 2px solid #0d6efd;
            border-radius: 50%;
            position: absolute;
            left: -7px;
            top: 20px;
        }
        
        .timeline-date {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 5px;
        }
        
        .timeline-content {
            font-weight: 500;
        }
    </style>
}