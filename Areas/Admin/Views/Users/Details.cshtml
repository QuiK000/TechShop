@using WebApplication2.Models
@model WebApplication2.Areas.Admin.Controllers.UserViewModel
@{
    ViewData["Title"] = $"Користувач: {Model.User.FirstName} {Model.User.LastName}";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var isLocked = Model.User.LockoutEnd.HasValue && Model.User.LockoutEnd.Value > DateTimeOffset.UtcNow;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-circle"></i> Деталі користувача</h1>
        <div>
            <a asp-action="EditRoles" asp-route-id="@Model.User.Id" class="btn btn-primary">
                <i class="fas fa-user-tag"></i> Керувати ролями
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <!-- User Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="user-avatar mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                        <span>@Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)</span>
                    </div>
                    <h4>@Model.User.FirstName @Model.User.LastName</h4>
                    <p class="text-muted">@Model.User.Email</p>
                    
                    <div class="mb-3">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="role-badge role-@role.ToLower()">@role</span>
                        }
                    </div>
                    
                    @if (isLocked)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-lock"></i> Користувача заблоковано
                        </div>
                        <button class="btn btn-success w-100" 
                                onclick="adminFunctions.toggleUserLock('@Model.User.Id', false)">
                            <i class="fas fa-unlock"></i> Розблокувати
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> Активний
                        </div>
                        <button class="btn btn-danger w-100" 
                                onclick="adminFunctions.toggleUserLock('@Model.User.Id', true)">
                            <i class="fas fa-lock"></i> Заблокувати
                        </button>
                    }
                </div>
            </div>

            <!-- Statistics -->
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Статистика</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Замовлень:</strong><br>
                        <h3 class="text-primary mb-0">@Model.User.Orders.Count</h3>
                    </div>
                    <div class="mb-3">
                        <strong>Відгуків:</strong><br>
                        <h4 class="text-info mb-0">@Model.User.Reviews.Count</h4>
                    </div>
                    <div>
                        <strong>Дата реєстрації:</strong><br>
                        @Model.User.CreatedAt.ToString("dd.MM.yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-id-card"></i> Особиста інформація</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Ім'я:</strong><br>
                            @Model.User.FirstName
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Прізвище:</strong><br>
                            @Model.User.LastName
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong><br>
                            <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Телефон:</strong><br>
                            @(Model.User.PhoneNumber ?? "Не вказано")
                        </div>
                        <div class="col-md-12 mb-3">
                            <strong>Адреса:</strong><br>
                            @(Model.User.Address ?? "Не вказано")
                        </div>
                        <div class="col-md-6">
                            <strong>Email підтверджено:</strong><br>
                            @if (Model.User.EmailConfirmed)
                            {
                                <span class="badge bg-success">Так</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Ні</span>
                            }
                        </div>
                        <div class="col-md-6">
                            <strong>Телефон підтверджено:</strong><br>
                            @if (Model.User.PhoneNumberConfirmed)
                            {
                                <span class="badge bg-success">Так</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Ні</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Останні замовлення</h5>
                </div>
                <div class="card-body">
                    @if (Model.User.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Дата</th>
                                        <th>Сума</th>
                                        <th>Статус</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.User.Orders.OrderByDescending(o => o.CreatedAt).Take(5))
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            <td>@order.TotalAmount.ToString("N0") грн</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case OrderStatus.New:
                                                        <span class="status-badge status-new">Нове</span>
                                                        break;
                                                    case OrderStatus.Processing:
                                                        <span class="status-badge status-processing">В обробці</span>
                                                        break;
                                                    case OrderStatus.Shipped:
                                                        <span class="status-badge status-shipped">Відправлено</span>
                                                        break;
                                                    case OrderStatus.Delivered:
                                                        <span class="status-badge status-delivered">Доставлено</span>
                                                        break;
                                                    case OrderStatus.Cancelled:
                                                        <span class="status-badge status-cancelled">Скасовано</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">Замовлень поки немає</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>