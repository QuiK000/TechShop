@model WebApplication2.Areas.Admin.Controllers.UserDetailsViewModel
@{
    ViewData["Title"] = "Деталі користувача";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>@Model.User.FirstName @Model.User.LastName</h1>
            <p class="text-muted">@Model.User.Email</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Інформація про користувача -->
    <div class="col-lg-4">
        <div class="table-card mb-4">
            <div class="text-center mb-3">
                <div class="user-avatar mx-auto mb-3" 
                     style="width: 100px; height: 100px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                    <span class="text-white" style="font-size: 2.5rem; font-weight: bold;">
                        @Model.User.FirstName.Substring(0, 1)@Model.User.LastName.Substring(0, 1)
                    </span>
                </div>
                <h4>@Model.User.FirstName @Model.User.LastName</h4>
                <p class="text-muted">@Model.User.Email</p>
                
                @if (Model.IsLocked)
                {
                    <span class="badge bg-danger fs-6">Заблоковано</span>
                }
                else
                {
                    <span class="badge bg-success fs-6">Активний</span>
                }
            </div>

            <hr>

            <div class="mb-3">
                <strong>Телефон:</strong><br>
                @(Model.User.PhoneNumber ?? "Не вказано")
            </div>

            <div class="mb-3">
                <strong>Адреса:</strong><br>
                @(Model.User.Address ?? "Не вказано")
            </div>

            <div class="mb-3">
                <strong>Дата реєстрації:</strong><br>
                @Model.User.CreatedAt.ToString("dd.MM.yyyy HH:mm")
            </div>

            <div class="mb-3">
                <strong>Ролі:</strong><br>
                @foreach (var role in Model.Roles)
                {
                    @if (role == "Admin")
                    {
                        <span class="badge bg-danger me-1">@role</span>
                    }
                    else if (role == "Manager")
                    {
                        <span class="badge bg-warning me-1">@role</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary me-1">@role</span>
                    }
                }
                @if (!Model.Roles.Any())
                {
                    <span class="text-muted">Без ролей</span>
                }
            </div>

            <hr>

            <div class="d-grid gap-2">
                <a asp-action="EditRoles" asp-route-id="@Model.User.Id" class="btn btn-warning">
                    <i class="fas fa-user-tag"></i> Редагувати ролі
                </a>
                
                @if (Model.IsLocked)
                {
                    <button onclick="unlockUser('@Model.User.Id')" class="btn btn-success">
                        <i class="fas fa-unlock"></i> Розблокувати
                    </button>
                }
                else
                {
                    <button onclick="lockUser('@Model.User.Id')" class="btn btn-outline-warning">
                        <i class="fas fa-lock"></i> Заблокувати
                    </button>
                }
                
                <button onclick="deleteUser('@Model.User.Id')" class="btn btn-outline-danger">
                    <i class="fas fa-trash"></i> Видалити користувача
                </button>
            </div>
        </div>

        <!-- Статистика -->
        <div class="table-card">
            <h5 class="mb-3"><i class="fas fa-chart-bar"></i> Статистика</h5>
            
            <div class="row text-center">
                <div class="col-6 mb-3">
                    <h3 class="text-primary">@Model.Orders.Count</h3>
                    <small class="text-muted">Замовлень</small>
                </div>
                <div class="col-6 mb-3">
                    <h3 class="text-success">@Model.Orders.Sum(o => o.TotalAmount).ToString("N0") ₴</h3>
                    <small class="text-muted">Загальна сума</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Замовлення -->
    <div class="col-lg-8">
        <div class="table-card">
            <h5 class="mb-3"><i class="fas fa-shopping-cart"></i> Історія замовлень (@Model.Orders.Count)</h5>
            
            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>№ Замовлення</th>
                                <th>Дата</th>
                                <th>Товарів</th>
                                <th>Сума</th>
                                <th>Статус</th>
                                <th>Дії</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td><strong>@order.OrderNumber</strong></td>
                                    <td>@order.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>@order.OrderItems.Count шт.</td>
                                    <td><strong>@order.TotalAmount.ToString("N0") ₴</strong></td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case WebApplication2.Models.OrderStatus.New:
                                                <span class="badge badge-new">Нове</span>
                                                break;
                                            case WebApplication2.Models.OrderStatus.Processing:
                                                <span class="badge badge-processing">В обробці</span>
                                                break;
                                            case WebApplication2.Models.OrderStatus.Shipped:
                                                <span class="badge badge-shipped">Відправлено</span>
                                                break;
                                            case WebApplication2.Models.OrderStatus.Delivered:
                                                <span class="badge badge-delivered">Доставлено</span>
                                                break;
                                            case WebApplication2.Models.OrderStatus.Cancelled:
                                                <span class="badge badge-cancelled">Скасовано</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="OrderDetails" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Деталі
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Користувач ще не робив замовлень
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function lockUser(userId) {
            if (!confirm('Заблокувати користувача?')) return;

            $.ajax({
                url: '/Admin/Users/Lock',
                method: 'POST',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast(response.message, 'danger');
                    }
                }
            });
        }

        function unlockUser(userId) {
            if (!confirm('Розблокувати користувача?')) return;

            $.ajax({
                url: '/Admin/Users/Unlock',
                method: 'POST',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showToast(response.message, 'danger');
                    }
                }
            });
        }

        function deleteUser(userId) {
            if (!confirm('Видалити користувача? Цю дію не можна відмінити.')) return;

            $.ajax({
                url: '/Admin/Users/Delete',
                method: 'POST',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, 'success');
                        setTimeout(() => window.location.href = '/Admin/Users', 1500);
                    } else {
                        showToast(response.message, 'danger');
                    }
                }
            });
        }
    </script>
}