@model List<WebApplication2.Areas.Admin.Controllers.UserViewModel>
@{
    ViewData["Title"] = "Управління користувачами";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-users"></i> Управління користувачами</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Користувач</th>
                            <th>Email</th>
                            <th>Телефон</th>
                            <th>Ролі</th>
                            <th>Дата реєстрації</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userViewModel in Model)
                        {
                            var user = userViewModel.User;
                            var isLocked = user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTimeOffset.UtcNow;
                            
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="user-avatar me-3" style="width: 40px; height: 40px; font-size: 1rem;">
                                            <span>@user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)</span>
                                        </div>
                                        <div>
                                            <strong>@user.FirstName @user.LastName</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>@(user.PhoneNumber ?? "Не вказано")</td>
                                <td>
                                    @foreach (var role in userViewModel.Roles)
                                    {
                                        <span class="role-badge role-@role.ToLower()">@role</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                <td>
                                    @if (isLocked)
                                    {
                                        <span class="badge bg-danger">Заблоковано</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Активний</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-info" title="Переглянути">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditRoles" asp-route-id="@user.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Ролі">
                                            <i class="fas fa-user-tag"></i>
                                        </a>
                                        @if (isLocked)
                                        {
                                            <button class="btn btn-sm btn-outline-success" 
                                                    onclick="adminFunctions.toggleUserLock('@user.Id', false)" 
                                                    title="Розблокувати">
                                                <i class="fas fa-unlock"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    onclick="adminFunctions.toggleUserLock('@user.Id', true)" 
                                                    title="Заблокувати">
                                                <i class="fas fa-lock"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>