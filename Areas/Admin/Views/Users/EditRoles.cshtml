@{
    ViewData["Title"] = "Управління ролями";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var user = ViewBag.User as WebApplication2.Models.ApplicationUser;
    var userRoles = ViewBag.UserRoles as IList<string>;
    var allRoles = ViewBag.AllRoles as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-tag"></i> Управління ролями</h1>
        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Назад
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle"></i> 
                        @user.FirstName @user.LastName (@user.Email)
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditRoles" method="post">
                        <div class="mb-4">
                            <label class="form-label"><strong>Поточні ролі:</strong></label>
                            <div>
                                @if (userRoles.Any())
                                {
                                    @foreach (var role in userRoles)
                                    {
                                        <span class="role-badge role-@role.ToLower() me-2 mb-2">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Ролі не призначено</span>
                                }
                            </div>
                        </div>

                        <hr>

                        <div class="mb-4">
                            <label class="form-label"><strong>Призначити ролі:</strong></label>
                            <div class="form-text mb-3">
                                Виберіть ролі, які хочете призначити користувачу. 
                                Утримуйте Ctrl для вибору декількох ролей.
                            </div>
                            
                            <div class="list-group">
                                @if (allRoles != null)
                                {
                                    @foreach (var role in allRoles)
                                    {
                                        var isChecked = userRoles.Contains(role.Text);
                                        <label class="list-group-item">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" 
                                                       name="roles" value="@role.Value" 
                                                       id="role_@role.Value"
                                                       @(isChecked ? "checked" : "")>
                                                <label class="form-check-label" for="role_@role.Value">
                                                    <strong>@role.Text</strong>
                                                    <div class="small text-muted">
                                                        @switch (role.Text)
                                                        {
                                                            case "Admin":
                                                                <text>Повний доступ до всіх функцій системи</text>
                                                                break;
                                                            case "Manager":
                                                                <text>Доступ до управління замовленнями та відгуками</text>
                                                                break;
                                                            case "User":
                                                                <text>Звичайний користувач магазину</text>
                                                                break;
                                                        }
                                                    </div>
                                                </label>
                                            </div>
                                        </label>
                                    }
                                }
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Увага!</strong> Зміна ролей вплине на права доступу користувача до системи.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Зберегти зміни
                            </button>
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-secondary">
                                Скасувати
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Role Information -->
            <div class="card shadow-sm mt-4 bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-info-circle"></i> Інформація про ролі</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Admin</dt>
                        <dd class="col-sm-9">
                            Повний доступ до адмін-панелі, управління товарами, користувачами, 
                            замовленнями та всіма налаштуваннями системи.
                        </dd>

                        <dt class="col-sm-3">Manager</dt>
                        <dd class="col-sm-9">
                            Доступ до перегляду та управління замовленнями, відгуками клієнтів. 
                            Без можливості редагувати товари та користувачів.
                        </dd>

                        <dt class="col-sm-3">User</dt>
                        <dd class="col-sm-9 mb-0">
                            Звичайний користувач магазину. Може робити замовлення, 
                            залишати відгуки, керувати своїм профілем.
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('form').on('submit', function(e) {
                const checkedCount = $('input[name="roles"]:checked').length;
                if (checkedCount === 0) {
                    e.preventDefault();
                    if (confirm('Ви не вибрали жодної ролі. Користувач матиме мінімальні права доступу. Продовжити?')) {
                        this.submit();
                    }
                }
            });
        });
    </script>
}