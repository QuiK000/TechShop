<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Адмін-панель TechShop</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading bg-primary text-white py-3 px-4">
                <h4 class="mb-0"><i class="fas fa-laptop"></i> TechShop Admin</h4>
            </div>
            <div class="list-group list-group-flush">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" 
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-tachometer-alt me-2"></i> Головна
                </a>
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" 
                       class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-boxes me-2"></i> Товари
                    </a>
                }
                
                <a asp-area="Admin" asp-controller="Orders" asp-action="Index" 
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-shopping-cart me-2"></i> Замовлення
                </a>
                
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Statistics" 
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-chart-line me-2"></i> Статистика
                </a>
                
                <a asp-area="Admin" asp-controller="Reports" asp-action="Index" 
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-file-export me-2"></i> Звіти
                </a>

                <hr class="bg-secondary my-0">
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" 
                       class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-users me-2"></i> Користувачі
                    </a>
                }
                
                <hr class="bg-secondary my-0">
                
                @if (User.IsInRole("Admin"))
                {
                    <a asp-area="Admin" asp-controller="Products" asp-action="Index" 
                       class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-boxes me-2"></i> Товари
                    </a>
                    
                    <a asp-area="Admin" asp-controller="Categories" asp-action="Index" 
                       class="list-group-item list-group-item-action bg-dark text-white">
                        <i class="fas fa-folder-open me-2"></i> Категорії
                    </a>
                }
                
                <a asp-area="" asp-controller="Home" asp-action="Index" 
                   class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fas fa-home me-2"></i> На сайт
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3">
                            <i class="fas fa-user-circle"></i> @User.Identity?.Name
                        </span>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-sign-out-alt"></i> Вийти
                            </button>
                        </form>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid py-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="fas fa-check-circle"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Toggle sidebar
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('wrapper').classList.toggle('toggled');
        });

        // Highlight active menu item
        $(document).ready(function() {
            var currentPath = window.location.pathname;
            $('.list-group-item').each(function() {
                var href = $(this).attr('href');
                if (currentPath.includes(href) && href !== '/') {
                    $(this).addClass('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>